#!/usr/bin/env php
<?php
require __DIR__ . '/../boopstrap.php';

echo 'Ask anything to AI.' . PHP_EOL;


while (true) {
    $input = readline('>');

    if ($input === 'exit' || $input === 'salir' || $input === ' ') {
        echo 'Gracias por estar aqui';
        break;
    } elseif ($input === 'hola' || $input === 'hi' || $input === 'hello') {
        echo 'Hello there';
        continue;
    }

    $messages[] = ['role' => 'user', 'content' => $input];

    $response = $aiService->getResponse($messages);

    echo $response . PHP_EOL;

    $messages[] = ['role' => 'assistant', 'content' => $response];
}